-- Get the local player
local player = game.Players.LocalPlayer

-- Function to find the closest player
local function findClosestPlayer()
    local minDist = math.huge
    local closestPlayer = nil

    -- Iterate through all players
    for _, otherPlayer in ipairs(game.Players:GetPlayers()) do
        -- Check if the player is not the local player
        if otherPlayer ~= player then
            -- Calculate distance between local player and other player
            local dist = (otherPlayer.Character.HumanoidRootPart.Position - player.Character.HumanoidRootPart.Position).magnitude

            -- Update closest player if closer than previous closest
            if dist < minDist then
                minDist = dist
                closestPlayer = otherPlayer
            end
        end
    end

    return closestPlayer
end

-- Function to update camera
local function updateCamera()
    local closestPlayer = findClosestPlayer()
    
    if closestPlayer then
        -- Set camera's CFrame to look at the closest player's character
        local lookAtPosition = closestPlayer.Character.HumanoidRootPart.Position
        local currentCameraCFrame = game.Workspace.CurrentCamera.CFrame
        game.Workspace.CurrentCamera.CFrame = CFrame.new(currentCameraCFrame.Position, lookAtPosition)
    end
end

-- Call updateCamera function periodically
while wait(0.1) do
    updateCamera()
end
